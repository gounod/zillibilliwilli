  <%= nav_bar :fixed => :top, :responsive => true, :brand => "Zilli Billi Willi", :brand_link => root_path() do %>
  <%= menu_group :pull => :right do %>
    <%= menu_item "Home", root_path %>
    <%= menu_item "Themen", discussions_path(:state => "opened") %>
    <%= menu_item "Bilder", gallery_path() %>

    <%= menu_item "Kontakt", contact_path() %>
